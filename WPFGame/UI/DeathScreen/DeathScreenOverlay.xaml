<UserControl x:Class="WPFGame.UI.DeathScreen.DeathScreenOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGame.UI.DeathScreen"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="Black">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="70" Foreground="#c40000" FontWeight="DemiBold">YOU DIED</TextBlock>
        <TextBlock Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10, 10">Press "Space" to continue</TextBlock>
    </Grid>
</UserControl>
